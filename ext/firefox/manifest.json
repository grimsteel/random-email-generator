{
  "manifest_version": 3,
  "name": "Random Email Generator",
  "description": "Email generator extension",
  "permissions": ["storage"],
  "version": "0.1",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["service-worker.js"]
  },
  "action": {
    "default_title": "Create random email",
    "default_popup": "popup.html"
  },
  "icons": {
    "48":  "icons/icon-48.png",
    "64":  "icons/icon-64.png",
    "96":  "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "random-email-generator@noreply.kameswar.com",
      "strict_min_version": "109.0",
      "update_url": "https://kameswar.com/firefox-extension-updates.json"
    }
  }
}
